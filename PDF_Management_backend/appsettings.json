{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=PdfManagement;User Id=postgres;Password=postgres;"
  },
  "JwtSettings": {
    "SecretKey": "your-secret-key-here",
    "Issuer": "pdf-management-api",
    "Audience": "pdf-management-client",
    "ExpiryMinutes": 60
  },
  "FileStorage": {
    "Provider": "Local",
    "LocalBasePath": "uploads"
  }
}
